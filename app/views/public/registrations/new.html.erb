<h5 class="m-5"><span class="bg-light">　新規会員登録　</span></h5>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="field">
    <label>名前</label>
    <label for="lastName">（姓）</label>
    <%= f.text_field :last_name,id:"lastName",placeholder:"令和", autofocus: true, autocomplete: "last_name" %>
    <label for="firstName">（名）</label>
    <%= f.text_field :first_name,id:"firstName",placeholder:"道子", autocomplete: "first_name" %>
  </div>

  <div class="field">
    <label>フリガナ</label>
    <label for="lastNameKana">（セイ）</label>
    <%= f.text_field :last_name_kana,id:"lastNameKana",placeholder:"レイワ", autocomplete: "last_name_kana" %>
    <label for="firstNameKana">（メイ）</label>
    <%= f.text_field :first_name_kana,id:"firstNameKana",placeholder:"ミチコ", autocomplete: "first_name_kana" %>
  </div>

  <div class="field">
    <label for="email">メールアドレス</label>
    <%= f.email_field :email,id:"email",placeholder:"sample@example.com", autocomplete: "email" %>
  </div>

  <div class="field">
    <label for="postal">郵便番号（ハイフンなし）</label>
    <%= f.text_field :postal_code,id:"postal",placeholder:"0000000", autocomplete: "postal_code" %>
  </div>

  <div class="field">
    <label for="address">住所</label>
    <%= f.text_field :address,id:"address",placeholder:"東京都渋谷区代々木神園町0-0", autocomplete: "address" %>
  </div>

  <div class="field">
    <label for="telephone">電話番号（ハイフンなし）</label>
    <%= f.text_field :telephone_number,id:"telephone",placeholder:"00000000000", autocomplete: "telephone_number" %>
  </div>

  <div class="field">
    <% if @minimum_password_length %>
    <!--<em>(<%= @minimum_password_length %> characters minimum)</em>-->
    <% end %><br />
    <label for="password">パスワード(6文字以上)</label>
    <%= f.password_field :password,id:"password", autocomplete: "new-password" %>
  </div>

  <div class="field">
    <label for="password_confirmation">パスワード(確認用)</label>
    <%= f.password_field :password_confirmation,id:"password_confirmation", autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>


<h5 class="m-5"><span class="bg-light">　既に登録済みの方　</span></h5>
<%= render "public/shared/links" %>からログインしてください。
