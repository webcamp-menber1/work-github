<%= image_tag @item.get_image(200,200) %>
<%= @item.name %><br>
<%= @item.introduction %><br>
<p>¥<%= @item.price.to_s(:delimited) %>(税込）</p>

<%= form_with model:@cart_item,url:'/cart_items',method: :post do |f| %>
  <%= f.hidden_field:item_id,:value => @item.id %>
  <%= f.select:amount,*[1..100],{include_blank:'個数選択'},{required: true} %>
  <%= f.submit"カートに入れる" %>
<% end %>