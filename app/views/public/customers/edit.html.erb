<% if @customer.errors.any? %>
  <h5><%= @customer.errors.count %>件のエラーが発生しました。</h5>
  <% @customer.errors.full_messages.each do |message| %>
    <ul>
      <li><%= message %></li>
    </ul>
  <% end %>
<% end %>

<h5 class="m-5"><span class="bg-light">　会員情報編集　</span></h5>

<%= form_with model:@customer,url:'/customers/information',method: :patch do |f| %>
  <label for="name">氏名</label>
    <%= f.text_field:last_name,id:"name" %>
    <%= f.text_field:first_name %><br>

  <label for="kana">フリガナ</label>
    <%= f.text_field:last_name_kana,id:"kana" %>
    <%= f.text_field:first_name_kana %><br>

  <label for="postal">郵便番号</label>
    <%= f.text_field:postal_code,id:"postal" %><br>

  <label for="address">住所</label>
    <%= f.text_field:address,id:"address" %><br>

  <label for="telephone">電話番号</label>
    <%= f.telephone_field:telephone_number,id:"telephone" %><br>

  <label for="email">メールアドレス</label>
    <%= f.email_field:email,id:"email" %>

    <%= f.submit"変更内容を保存"%>
<% end %>

<%= link_to "退会する",'/customers/confirm' %>