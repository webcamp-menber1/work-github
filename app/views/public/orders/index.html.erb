<h5 class="m-5"><span class="bg-light">　注文履歴一覧　</span></h5>

<table class="table">
  <thead>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
    <tr>
      <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
      <td>
        〒<%= order.delivery_postal_code %><br>
        <%= order.delivery_address %><br>
        <%= order.delivery_name %>
      </td>
      <td>
       <% order.order_details.each do |order_detail| %>
         <ul>
           <li><%= order_detail.item.name %></li>
         </ul>
       <% end %>
       </td>
      <td><%= order.payment.to_s(:delimited)%>円</td>
      <td><%= Order.order_statuses_i18n[:"#{order.order_status}"] %></td>
      <td><%= link_to "表示する",order_path(order.id) %></td>
    </tr>
    <% end %>
  </tbody>
</table>