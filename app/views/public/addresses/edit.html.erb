<% if @address.errors.any? %>
  <h5><%= @address.errors.count %>件のエラーが発生しました。</h5>
  <% @address.errors.full_messages.each do |message| %>
    <ul>
      <li><%= message %></li>
    </ul>
  <% end %>
<% end %>

<h5 class="m-5"><span class="bg-light">　配送先編集　</span></h5>

<%= form_with model:@address,url:address_path(@address.id),method: :patch do |f| %>
  <label for="postal">郵便番号（ハイフンなし）</label>
  <%= f.text_field:postal_code,id:"postal" %><br>

  <label for="address">住所</label>
  <%= f.text_field:address,id:"address" %><br>

  <label for="name">宛名</label>
  <%= f.text_field:name,id:"name" %>

  <%= f.submit"変更内容を保存" %>
  <% end %>