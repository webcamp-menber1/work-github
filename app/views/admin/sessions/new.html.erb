<div class="container">

  <h5 class="m-5"><span class="bg-light text-nowrap"><strong>　管理者ログイン　</span></h5>


  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>


    <div class="row justify-content-center">
      <label for="inputEmail" class="col-md-3 col-10 text-secondary">メールアドレス</label>
      <div class="col-md-5 col-10">
        <%= f.email_field :email,id:"inputEmail", :size=>"40", autofocus: true,placeholder:"sample@example.com", autocomplete: "email",class:"form-control-sm" %>
      </div>
    </div>

    <div class="row justify-content-center pt-3">
      <label for="password" class="col-md-3 col-10 col-form-label text-secondary">パスワード</label>
      <div class="col-md-5 col-10">
        <%= f.password_field :password,id:"password", :size=>"40", autocomplete: "current-password",class:"form-control-sm" %>
      </div>
    </div>

          <% if devise_mapping.rememberable? %>
            <!--<div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>-->
          <% end %>

    <div class="row justify-content-center pt-4">
      <div class="offset-md-3 col-5">
        <%= f.submit "ログイン",class:"btn btn-primary col-md-4" %>
      </div>
    </div>


  <% end %>

  <%= render "admin/shared/links" %>

</div>
