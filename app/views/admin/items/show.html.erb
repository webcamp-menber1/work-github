<div class="container">
  <div class="row">
    <h5 style="margin:50px 80px;"><span class="bg-light">　商品詳細　</span></h5>
  </div>

  <div class="row">
    <div class="col-md-3 text-center mt-3">
    <%= image_tag @item.get_image(200,200) %>
   </div>

    <div class="offset-1 col-md-8 mt-3">
      <table class="table table-borderless ml-4">
      <tr><th style="width: 30%">商品名</th><td style="width: 70%"><%= @item.name %></td></tr>
      <tr><th style="width: 30%">商品説明</th><td style="width: 70%"><%= @item.introduction %></td></tr>
      <tr><th style="width: 30%">ジャンル</th><td style="width: 70%"><%= @item.genre.name %></td></tr>
      <tr><th style="width: 30%">税込価格<br>(税抜価格)</th><td style="width: 70%"><%= (@item.price*1.1).floor.to_s(:delimited)%>(<%= @item.price.to_s(:delimited) %>)円</td></tr>
      <tr><th style="width: 30%">販売ステータス</th>
          <% if @item.is_active=="sale" %>
            <td style="width: 70%" class="text-success"><%= Item.is_actives_i18n[:"#{@item.is_active}"]%></td>
          <% else %>
            <td style="width: 70%" class="text-secondary"><%= Item.is_actives_i18n[:"#{@item.is_active}"]%></td>
          <% end %>
      </tr>
      </table>
    </div>
      <%=link_to edit_admin_item_path(@item.id),class:"btn btn-success col-2 mx-auto mt-2" do %>
        <%="編集する" %>
      <% end %>

  </div>
</div>