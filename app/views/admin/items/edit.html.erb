<h4>商品編集</h4>

<% if @item.errors.any? %>
  <%= @item.errors.count %>件のエラーが発生しました。
  <% @item.errors.full_messages.each do |message| %>
    <ul>
      <li><%= message %></li>
    </ul>
  <% end %>
<% end %>

<%= form_with model:@item,url:admin_item_path(@item.id),method: :patch do |f| %>

<label for="image">商品画像</label>
<%= f.file_field:image,accept:"image/*",id:"image" %><br>

<label for="itemName">商品名</label>
<%= f.text_field:name,id:"itemName" %><br>

<label for="introduction">商品説明</label>
<%= f.text_area:introduction,size:"30x7",id:"introduction" %><br>

<label for="genre">ジャンル</label>
<%= f.select:genre_id,options_from_collection_for_select(Genre.all,:id,:name) %><br>

<label for="price">税抜価格</label>
<%= f.text_field:price,id:"genre" %>円<br>

<label for="is_active">販売ステータス</label>
<%= f.radio_button:is_active,"販売中" %>
<%= f.label:is_active,"販売中",{value: :true, style: "display: inline-block"} %>
<%= f.radio_button:is_active,"販売停止中" %>
<%= f.label:is_active,"販売停止中",{value: :false, style: "display: inline-block"} %><br>

<%= f.submit"変更を保存" %>
<% end %>