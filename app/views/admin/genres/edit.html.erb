<% if @genre.errors.any? %>
  <%= @genre.errors.count %>件のエラーが発生しました。
  <% @genre.errors.full_messages.each do |message| %>
    <ul>
      <li><%= message %></li>
    </ul>
  <% end %>
<% end %>

<h5 style="margin:50px 70px;"><span class="bg-light">　ジャンル編集　</span></h5>

<%= form_with model:@genre,url:admin_genre_path(@genre.id),method: :patch do |f| %>

<label for="genreName" class="mr-5 ml-5">ジャンル名</label>
<%= f.text_field:name,id:"genreName",class:"mr-5" %>

<%= f.submit"変更を保存",class:"btn btn-success ml-5" %>
<% end %>