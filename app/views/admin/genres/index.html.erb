<h4>ジャンル一覧・追加</h4>

<% if @genre.errors.any? %>
  <%= @genre.errors.count %>件のエラーが発生しました。
  <% @genre.errors.full_messages.each do |message| %>
    <ul>
      <li><%= message %></li>
    </ul>
  <% end %>
<% end %>

<%= form_with model:@genre,url:'/admin/genres',method: :post do |f| %>

<label for="genreName">ジャンル名</label>
<%=f.text_field:name,id:"genreName" %>

<%=f.submit"新規登録" %>

<% end %>

<table>
  <thead>
    <th>ジャンル</th>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%=link_to edit_admin_genre_path(genre.id) do %>
              <%= "編集する" %>
            <% end %>
        </td>
      </tr>
    <% end %>

  </tbody>
</table>



