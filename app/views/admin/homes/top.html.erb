<h4>注文履歴一覧</h4>

<table>
  <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>

  <tbody>

    <% @orders.each do |order| %>
    <td><%= order.created_at %></td>
    <td><%= "#{order.customer.last_name}#{order.customer.first_name}" %></td>
    <td><%= order.sum(:order_details.amount) %></td>
    <td><%= Order.order_statuses_i18n[:"#{order.order_status}"] %></td>
    <% end %>
  </tbody>
</table>

<%= paginate @orders %>