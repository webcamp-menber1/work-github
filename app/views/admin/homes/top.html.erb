<h4>注文履歴一覧</h4>

<table>
  <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>

  <tbody>

    <% @orders.each do |order| %>

      <tr>
        <td>
          <%= link_to order.created_at.strftime("%Y/%m/%d %H:%M:%S"),admin_order_path(order.id) %>
        </td>
        <td><%= "#{order.customer.last_name}#{order.customer.first_name}" %></td>
        <td><%= order.order_details.sum(:amount) %>

        </td>
        <td><%= Order.order_statuses_i18n[:"#{order.order_status}"] %></td>

      </tr>
    <% end %>

  </tbody>
</table>
<%= paginate @orders %>