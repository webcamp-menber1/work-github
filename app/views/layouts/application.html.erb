<!DOCTYPE html>
<html>
  <head>
    <title>WorkGithub</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <h2>ながのCAKE</h2>
      <% if admin_signed_in? %>
        <ul>
          <li>
            <%= link_to '/admin/items' do %>
                <%= "商品一覧" %>
              <% end %>
          </li>
          <li>
            <%= link_to '/admin/customers' do %>
              <%= "会員一覧" %>
            <% end %>
          </li>
          <li>
            <%= link_to '/admin' do %>
              <%= "注文履歴一覧" %>
            <% end %>
          </li>
          <li>
            <%= link_to '/admin/genres' do %>
              <%= "ジャンル一覧" %>
            <% end %>
          </li>
          <li>
            <%= link_to destroy_admin_session_path,method: :delete do %>
                <%= "ログアウト" %>
              <% end %>
          </li>

      <% elsif customer_signed_in? %>
          <ul>
            <li>
              <%= link_to '/customers/my_page' do %>
                <%= "マイページ" %>
              <% end %>
            </li>
            <li>
              <%= link_to '/items' do %>
                <%= "商品一覧" %>
              <% end %>
            </li>
            <li>
              <%= link_to '/cart_items' do %>
                <%= "カート" %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_customer_session_path,method: :delete do %>
                <%= "ログアウト" %>
              <% end %>
            </li>
          </ul>
      <% else %>
      <ul>
        <li>
          <%= link_to about_path do %>
            <%= "About" %>
          <% end %>
        </li>
        <li>
          <%= link_to '/items' do %>
            <%= "商品一覧" %>
          <% end %>
        </li>
        <li>
          <%= link_to new_customer_registration_path do %>
            <%= "新規登録" %>
          <% end %>
        </li>
        <li>
          <%= link_to new_customer_session_path do %>
          <%= "ログイン" %>
          <% end %>
        </li>
      </ul>
      <% end %>
    </header>

    <main>
    <%= yield %>
    </main>

  </body>
</html>
